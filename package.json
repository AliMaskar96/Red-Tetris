{
  "name": "red_tetrisboilerplate",
  "version": "0.0.1",
  "author": "redpelicans",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "eslint": "eslint src",
    "client-dist": "NODE_ENV=production webpack --progress --colors",
    "client-dev": "webpack-dev-server --hot --host 0.0.0.0 --port 8080",
    "srv-dev": "DEBUG=tetris:* babel-watch -w src src/server/main.js",
    "srv-dist": "DEBUG=tetris:* babel src --out-dir dist",
    "test": "jest",
    "coverage": "jest --coverage"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "css-loader": "^7.1.2",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "socket.io": "^4.7.5",
    "socket.io-client": "^4.8.1",
    "style-loader": "^4.0.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.24.4",
    "@babel/core": "^7.24.4",
    "@babel/eslint-parser": "^7.24.4",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-react": "^7.24.4",
    "@babel/register": "^7.28.3",
    "babel-loader": "^9.1.3",
    "babel-plugin-__coverage__": "^0.111111.1",
    "babel-watch": "^7.8.1",
    "chai": "^4.4.1",
    "chai-as-promised": "^7.1.1",
    "eslint": "^9.4.0",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-react": "^7.34.1",
    "jest": "^29.7.0",
    "mocha": "^10.4.0",
    "nyc": "^15.1.0",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-middleware": "^5.3.4",
    "webpack-dev-server": "^5.0.4",
    "webpack-hot-middleware": "^2.25.4"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    },
    "testMatch": [
      "**/test/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js",
      "!src/**/index.js",
      "!src/client/components/**",
      "!src/client/containers/**",
      "!src/client/hooks/**",
      "!src/client/services/**",
      "!src/server/socketHandlers.js",
      "!src/server/main.js",
      "!src/server/models/Game.js",
      "!src/server/models/Piece.js",
      "!src/server/models/Player.js"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 70,
        "functions": 70,
        "lines": 70,
        "branches": 50
      }
    },
    "coverageReporters": ["text", "lcov", "html"]
  }
}
