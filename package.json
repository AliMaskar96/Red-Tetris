{
  "name": "red_tetrisboilerplate",
  "version": "0.0.1",
  "author": "redpelicans",
  "license": "MIT",
  "scripts": {
    "eslint": "eslint src",
    "client-dist": "NODE_ENV=production webpack --progress",
    "client-dev": "webpack-dev-server --hot --host 0.0.0.0 --port 8080",
    "srv-dev": "DEBUG=tetris:* babel-watch -w src src/server/main.js",
    "srv-dist": "DEBUG=tetris:* babel src --out-dir dist",
    "start": "node scripts/start-production.js",
    "build": "node scripts/build-client.js",
    "build:client": "npm run client-dist",
    "prod": "npm start",
    "test": "jest",
    "coverage": "jest --coverage"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "css-loader": "^7.1.2",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "socket.io": "^4.7.5",
    "socket.io-client": "^4.8.1",
    "style-loader": "^4.0.0",
    "uuid": "^11.1.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.24.4",
    "@babel/core": "^7.24.4",
    "@babel/eslint-parser": "^7.24.4",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-react": "^7.24.4",
    "@babel/register": "^7.28.3",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "babel-loader": "^9.1.3",
    "babel-plugin-__coverage__": "^0.111111.1",
    "babel-plugin-transform-import-meta": "^2.3.3",
    "babel-watch": "^7.8.1",
    "chai": "^4.4.1",
    "chai-as-promised": "^7.1.1",
    "eslint": "^9.4.0",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-react": "^7.34.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "mocha": "^10.4.0",
    "nyc": "^15.1.0",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-middleware": "^5.3.4",
    "webpack-dev-server": "^5.0.4",
    "webpack-hot-middleware": "^2.25.4"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/src/setupTests.js"
    ],
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    },
    "testMatch": [
      "**/test/**/*.test.js",
      "**/__tests__/**/*.{js,jsx}",
      "**/src/**/*.{test,spec}.{js,jsx}"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/src/server/index.test.js",
      "/src/server/index-test.js"
    ],
    "moduleNameMapper": {
      "\\.(css|less|scss|sass)$": "identity-obj-proxy",
      "^../styles/spectrum\\.css$": "<rootDir>/test/__mocks__/styles/spectrum.css"
    },
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js",
      "!src/**/index.js",
      "!src/setupTests.js",
      "!src/server/socketHandlers.js",
      "!src/server/main.js",
      "!src/server/models/Game.js",
      "!src/server/models/Piece.js",
      "!src/server/models/Player.js",
      "!src/client/components/Board.js",
      "!src/client/components/GameBoard.js",
      "!src/client/components/OpponentsList.js",
      "!src/client/components/test.js",
      "!src/client/containers/app.js"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 70,
        "functions": 70,
        "lines": 70,
        "branches": 50
      }
    },
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "clearMocks": true,
    "verbose": true
  },
  "type": "module"
}